{
  "manifest_version": 3,
  "name": "Click To Copy Font Code",
  "icons": {
    "16": "/images/icon_16px.png",
    "32": "/images/icon_32px.png",
    "48": "/images/icon_48px.png",
    "128": "/images/icon_128px.png"
  },
  "description": "Adds the ability to click-to-copy the google font code links from the google fonts website",
  "version": "0.0.0.1",
  "author": "Arlin Ortiz",
  "action": {
    "default_icon": {
      "16": "/images/icon_16px.png",
      "32": "/images/icon_32px.png",
      "48": "/images/icon_48px.png",
      "128": "/images/icon_128px.png"
    }
  },
  "permissions": ["tabs"],
  "host_permissions": ["https://*.fonts.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.fonts.google.com/*"],
      "css": ["styles.css"],
      "js": ["script.js"]
    }
  ]
}